<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#03121212</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="background">@color/colorBlack</item>
        <item name="dialogCornerRadius">12dp</item>
        <item name="colorOnSurface">@color/colorWhite</item>
    </style>

    <style name="ActionBarText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>


</resources>
